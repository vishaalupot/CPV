@*@model IEnumerable<CPV_Mark3.Models.CaseImage>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




@{

    List<(int, string, int)> imageslist = (List<(int, string, int)>)ViewBag.Images;
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        location.reload();
    }
</script>

@foreach (var img in imageslist)
{

    <img id="@img.Item1" class="draggable-image" src="data:image/png;base64,@img.Item2" alt="Image" style="width: 250px; height: 250px; margin: 10px 5px; border: 0.5px groove #148888; padding: 20px;" />
}



<div class="form-group">
    <input type="button" value="Save Changes" class="btn ChngBtn" id="ChngBtn" />
</div>


