@model List<CPV_Mark3.Models.ProductTable>
@{
    Layout = null; // or Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Add New User</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: sans-serif;
            font-size: 16px; /* Set your desired base font size */
            width: 100%;
            height: 100%;
        }

        h1, h2 {
            margin-bottom: 20px;
        }

        .user-form {
           
            padding: 20px;
            border-radius: 5px;
            width: 450px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

     


        .user-form {
            display: flex;
            flex-direction: column;
            height: fit-content;
            width: 100%;
        }

        .cont {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .dis {
            width: max-content;
            height: 100%;
        }


        .view {
            margin-top: 120px;
            background-color: #EAF6F6;
            border-radius: 12px;
            padding: 10px;
            margin-left: 15px;
            margin-right: 15px;
            max-height: 500px;
            width: 500px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        tr:first-child td {
            border-top: none; /* Remove top border for the first row */
        }

        tr:last-child td {
            border-bottom: none; /* Remove bottom border for the last row */
        }

        td:first-child {
            border-left: none; /* Remove left border for the first column */
        }

        td:last-child {
            border-right: none; /* Remove right border for the last column */
        }

        table tr td {
            text-align: center;
            height: 60px;
            font-family: 'Jaldi', sans-serif;
            font-size: 20px;
        }

        .tableHead {
            font-size: 23px;
        }
    </style>
    <script src="/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
             $(".deleteBtn").click(function () {
                let data = $(this).data("id");
                 let url = '@Url.Action("DeleteProduct")';
                 let ajaxdata = { id : data };
                 //url = url.replace("_id_", data);
                 /*alert(ajaxdata);*/
                $.ajax({
                    url: url,
                    data: ajaxdata,
                    type: "Post",
                    success: function (result) {
                        location.reload();
                       /* alert("Success");*/
                    },
                    error: function (error) {
                        location.reload();

                    }
                })

            })
        })
    </script>
</head>
<body>


    <div class="cont">
        <div class="dis">
            <div class="view">
                <table>
                    <tr>
                        <td class="tableHead">Product Name</td>
                        <td class="tableHead">Delete</td>
                        @*<td class="tableHead">Status</td>*@
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductName) </td>
                            @*<td>@Html.DisplayFor(modelItem => item.ProductStatus) </td>*@
                            <td><button type="button" data-id='@item.ProductId' class="btn btn-primary deleteBtn">Delete</button></td>

                        </tr>

                    }

                </table>
            </div>
        </div>


    </div>

</body>
</html>
