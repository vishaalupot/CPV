@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.cdnfonts.com/css/inter" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>

        :root {
            --main-color: linear-gradient(to bottom, #aee1c9, #345a48);
            --main-color3: linear-gradient(to bottom,#97dbfc, #012336);
            --main-color2: linear-gradient(to bottom,#25947a, #236a8b 50%);
        }

        body {
            background-color: #DDDDDD;
        }

        .nav-bar {
            /*background: linear-gradient(to bottom, #aee1c9, #345a48);*/
            background: var(--main-color2);
            /* background-color: #648073;*/
            width: 225px;
            height: 100vh;
            display: flex;
            flex-direction: column; /* Set the direction to column */
            align-items: center; /* Optional: Center the items horizontally */
        }

        body {
            padding: 0;
        }

        h1 {
            margin: 0px;
        }

        .logo {
            margin-top: 40px;
            width: 150px;
            height: 85px;
            filter: drop-shadow(0px 3px 2px rgba(0.5, 0.40, 0.40, 0.45));
            transform: matrix(1, 0, 0, 1, 0, 0);
        }

        .nav-icons {
            width: 18px;
            height: 18px;
        }

        .nav-cont {
            display: flex;
            flex-direction: row;
            font-family: 'Inter', sans-serif;
            font-weight: 100;
            font-size: 15px;
            border-radius: 10px; /* Adjust the value to control the degree of curvature */
            padding: 10px 10px;
            width: 170px;
           /* box-shadow: rgba(0, 0, 0, 0.25) 1.95px 1.95px 2.6px;*/
            font-weight: 200;
        }

        .nav-contents {
     
        }




        .normal-text-link:hover {
            color: inherit;
            text-decoration: none;
            cursor: pointer;
        }

        li {
            list-style-type: none;
            margin-bottom: 20px;
            color: white;
            cursor: pointer;
        }

        ul {
            padding: 0px;
        }

        .nav-contents ul li .nav-cont {
            background-color: rgba(0, 0, 0, 0.2); /* Adjust the alpha value (0.5) for the desired transparency */
        }

        .nav-contents ul li:hover .nav-cont {
            color: #A6AA46;
          
            transition-duration: 0.20s;
        }

        .sub ul li:hover {
            color: #A6AA46;
            font-weight: 200;
        }

        .nav-contents ul li:hover .nav-cont .image {
            visibility: visible;
        }

        .nav-contents ul li:hover .nav-cont .image1 {
            visibility: hidden;
        }

        .image {
            visibility: visible;
            position: absolute;
        }

        .image1 {
            visibility: visible;
            position: absolute;
        }

        .body-cont {
            display: flex;
            flex-direction: row;
        }

        .body-conts {
            width: 100%;
            /*background-color: #648073;*/
            background: var(--main-color2);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logout {
            margin-top: auto;
            padding-bottom: 30px;
            display: flex;
            flex-direction: row;
            cursor: pointer;
        }

        .normal-text-link {
            color: inherit;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <div class="body-cont">
        <div class="nav-bar">
            <div class="nav-contents">
                <img src="~/Content/Images/logo.png" alt="Image 1" class="logo"  />
            </div>

           

            <div class="nav-contents" style="margin-top: 100px">
                <ul>
                    <li>
                        <div class="nav-cont">
                            <img src="~/Content/Images/dashboard.png" alt="Image 1" class="nav-icons image" />
                            <img src="~/Content/Images/dashboard1.png" alt="Image 1" class="nav-icons image1" />
                            <div style="padding-left: 25px;">@Html.ActionLink("Dashboard", "Index", "Home", new { @class = "normal-text-link" })</div>
                        </div>
                    </li>

                    <li>
                        <div class="nav-cont" data-bs-toggle="collapse" href="#dashboardCollapse2" aria-expanded="false" aria-controls="dashboardCollapse">
                            <img src="~/Content/Images/op.png" alt="Image 1" class="nav-icons image" />
                            @*<img src="~/Content/Images/dashboard1.png" alt="Image 1" class="nav-icons image1" />*@
                            <div style="padding-left: 25px;">Operations</div>
                        </div>
                        <div class="nav-cont collapse" id="dashboardCollapse2">
                            <div class="sub">
                                <ul>
                                    <li>
                                        @Html.ActionLink("User Master", "Register", "Home", null, new { @class = "normal-text-link" })
                                    </li>
                                    @*<li>@Html.ActionLink("User Master", "UserView1", "Home", new { @class = "normal-text-link" })</li>*@
                                    <li>@Html.ActionLink("Add New Product", "AddNewProductView", "Home", new { @class = "normal-text-link" })</li>
                                    @*<li>@Html.ActionLink("Verify Image", "NewProductView", "Home", new { @class = "normal-text-link" })</li>*@
                                </ul>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="nav-cont" data-bs-toggle="collapse" href="#dashboardCollapse3" aria-expanded="false" aria-controls="dashboardCollapse">
                            <img src="~/Content/Images/admin.png" alt="Image 1" class="nav-icons image" />
                            @*<img src="~/Content/Images/dashboard1.png" alt="Image 1" class="nav-icons image1" />*@
                            <div style="padding-left: 25px;">Administrator</div>
                        </div>
                        <div class="nav-cont collapse" id="dashboardCollapse3">
                            <div class="sub">
                                <ul>
                                    @*<li>@Html.ActionLink("Upload Allocation", "UploadAllocation", "Home", new { @class = "normal-text-link" })</li>*@
                                    <li>@Html.ActionLink("Case Manager", "DisplayCaseManager", "Home",null, new { @class = "normal-text-link" })</li>
                                    <li>@Html.ActionLink("Verify Manager", "DisplayVerifyManager", "Home", new { @class = "normal-text-link" })</li>
                                    <li>@Html.ActionLink("Send Cases", "CasesReports", "Home", new { @class = "normal-text-link" })</li>
                                    @*<li>@Html.ActionLink("Verify Transfer", "FETransfer", "Home", new { @class = "normal-text-link" })</li>*@
                                    <li>@Html.ActionLink("Verify Transfer", "FETransfer", "Home", null, new { @class = "normal-text-link", hidefocus = "hidefocus" })</li>


                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>


            <div style=" margin-top: auto;  display: flex; flex-direction: row; cursor: pointer;">
                

                @Html.Partial("_LoginPartial")
            </div>


        </div>



        <div class="body-conts">



            @RenderBody()

        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
